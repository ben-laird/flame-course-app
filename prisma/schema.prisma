// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Course {
  title    String      @unique
  canvasId Int         @id @unique
  code     CourseCode? @relation(fields: [subject, course, section], references: [subject, course, section])
  subject  String?
  course   Int?
  section  Int?
}

model CourseCode {
  subject String
  course  Int
  section Int
  Course  Course[]

  @@id([subject, course, section])
}
